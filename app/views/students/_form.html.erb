<%= form_for @student, html: {multipart: true} do |f| %>

  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@student.errors.count, "error") %> prevented this student from being saved 
      </h2>

      <ul>
        <% @student.errors.full_messages.each do |error| %>
          <li>
            <%= error %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  </div>
    <%= f.label :email%>
    <%= f.text_field :email %>
  <div>
    
  </div>
    <%= f.label :phone%>
    <%= f.text_field :phone %>
  </div>

  <div>
    <%= f.label :status %>
    <%= f.text_field :status %>
  </div>

  <div>
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

  <div>
    <%= collection_check_boxes(:student, :course_ids, Course.all, :id, :name) %>
  </div>


  <%= f.submit %>

<% end %>